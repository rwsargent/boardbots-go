{
  "name": "boardbots-web-client",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "build": "npm run build-sass && npm run build-ts && npm run build-pack && npm run lint && npm run copy-static-assets",
    "serve": "node dist/www.js",
    "watch-node": "nodemon dist/www.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Webpack,Sass,TypeScript,Node,\" -c \"yellow.bold,cyan.bold,purple.bold,green.bold\" \"npm run watch-pack\" \"npm run watch-sass\" \"sleep 3 && npm run watch-ts\" \"npm run serve-debug\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-pack": "webpack",
    "watch-pack": "webpack --watch",
    "build-sass": "node-sass src/public/css/main.sass dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.sass dist/public/css/main.css",
    "copy-static-assets": "ts-node copy-static-assets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/www.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Webpack,Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,purple.bold,green.bold\" \"npm run watch-pack\" \"npm run watch-sass\" \"sleep 3 && npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/google-protobuf": "^3.7.1",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.0.0",
    "express": "~4.16.1",
    "fs": "0.0.1-security",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "net": "^1.0.2",
    "node-sass-middleware": "0.11.0",
    "pug": "2.0.0-beta11"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^4.1.4",
    "@types/express": "^4.17.0",
    "@types/http-errors": "^1.6.1",
    "@types/morgan": "^1.7.36",
    "@types/node": "^12.6.8",
    "@types/node-sass-middleware": "0.0.31",
    "@types/shelljs": "^0.8.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "concurrently": "^4.1.1",
    "eslint": "^6.1.0",
    "grpc": "^1.22.2",
    "grpc-tools": "^1.8.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "protobufjs": "^6.8.8",
    "shelljs": "^0.8.3",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "ts-protoc-gen": "^0.10.0",
    "typescript": "^3.5.3",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6",
    "webpack-node-externals": "^1.7.2"
  }
}
